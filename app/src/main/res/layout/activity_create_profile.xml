<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateProfile">

    <LinearLayout
        android:id="@+id/Top_pane"
        android:layout_width="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:src="@drawable/ic_back_arrow"
            android:id="@+id/Back_IV"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="20dp"
            android:text="Next"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/Create_profile_TV"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans"
            android:paddingTop="10dp"
            android:text="Create Profile"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold" />


        <ImageView
            android:src="@drawable/ic_done"
            android:id="@+id/Next_IV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:backgroundTint="@color/white"
            android:text="Next"
            app:tint="@color/royal_blue"
            android:layout_gravity="center"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Top_pane">

        <ImageView
            android:id="@+id/Profile_Image_IV"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/borders_all_rounded_corners_small_btn"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_add_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Create_profile_TV"
            app:tint="@color/soft_blue" />

        <TextView
            android:id="@+id/profile_image_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/nunito_sans"
            android:text="profile image"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Profile_Image_IV" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/nunito_sans"
            android:padding="5dp"
            android:text="Name"
            android:id="@+id/name"
            android:textColor="@color/hint"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/Title_ET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/borders_all_rounded_corners_small_btn"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:drawableTint="@color/hint"
            android:fontFamily="@font/nunito_sans"
            android:hint="Emma watson"
            android:inputType="textCapCharacters"
            android:maxLength="28"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/nunito_sans"
            android:padding="5dp"
            android:text="Email"
            android:textColor="@color/hint"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/Email_ET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/borders_all_rounded_corners_small_btn"
            android:drawableStart="@drawable/ic_mail"
            android:drawablePadding="10dp"
            android:drawableTint="@color/hint"
            android:fontFamily="@font/nunito_sans"
            android:hint="example@xyz.com"
            android:inputType="textEmailAddress"
            android:maxLength="28"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/nunito_sans"
            android:padding="5dp"
            android:text="Password"
            android:textColor="@color/hint"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/Password_ET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/borders_all_rounded_corners_small_btn"
            android:drawableStart="@drawable/ic_key"
            android:drawablePadding="10dp"
            android:drawableTint="@color/hint"
            android:fontFamily="@font/nunito_sans"
            android:hint="Enter password..."
            android:inputType="textPassword"
            android:maxLength="28"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="6dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Age_ET"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/borders_all_rounded_corners_small_btn"
                android:gravity="center"
                android:hint="Age"
                android:inputType="number"
                android:maxLength="2" />

            <Button
                android:id="@+id/Gender"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="@drawable/all_rounded_corners_small_btn"
                android:backgroundTint="@color/soft_blue"
                android:padding="10dp"
                android:text="Gender"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Gender_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="6dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/Male_BTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/all_rounded_corners_small_btn"
                android:drawableStart="@drawable/ic_male"
                android:drawableTint="@color/black"
                android:padding="10dp"
                android:text="male"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/Female_BTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/all_rounded_corners_small_btn"
                android:drawableStart="@drawable/ic_female"
                android:drawableTint="@color/black"
                android:padding="10dp"
                android:text="female"
                android:textAllCaps="false"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Bottom_pane_CL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/top_rounded_corners"
        android:backgroundTint="@color/royal_blue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/One_last_step_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:text="One Last Step"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/One_last_step_TV">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito_sans"
                android:text="What are your working hours ?"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/nunito_sans"
                        android:gravity="center"
                        android:text="Starts at"
                        android:textColor="@color/hint"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/Work_starting_hour_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nunito_sans"
                        android:hint="00 : 00"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/nunito_sans"
                        android:gravity="center"
                        android:text="Ends at"
                        android:textColor="@color/hint"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/Work_ending_hour_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nunito_sans"
                        android:hint="00 : 00"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="21sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/Add_Breaks_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/nunito_sans"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:text="@string/add_breaks"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/Root_LL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">

                </LinearLayout>

            </ScrollView>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>